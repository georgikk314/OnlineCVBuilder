@model EducationViewModel
<h1>Your education</h1>
@using(Html.BeginForm("CreateEducation", "ResumeBuilder"))
{
    <div id="newEducation" style="width:55%; margin:10px;">
        <div class="form-outline mb-3">
            <label class="form-label" style="width: 100%;margin-top: 15px;" for="text">Enter institute</label>

            @Html.TextBoxFor(m=>m.InstituteName)
            @Html.ValidationMessageFor(m => m.InstituteName)
        </div>

        <div class="form-outline mb-3">
            <label class="form-label" style="width: 100%;margin-top: 15px;" for="text">Enter degree</label>
            @Html.TextBoxFor(m=>m.Degree)
            @Html.ValidationMessageFor(m => m.Degree)
        </div>
        <div class="form-outline mb-3">
            <label class="form-label" style="width: 100%;margin-top: 15px;" for="text">Enter field of study</label>

            @Html.TextBoxFor(m=>m.FieldOfStudy)
            @Html.ValidationMessageFor(m => m.FieldOfStudy)
        </div>

        <div class="form-outline mb-3">
            <label class="form-label" style="width: 100%;margin-top: 15px;" for="text">Enter studying period</label>

            @Html.TextBoxFor(m=>m.StartDate)
            @Html.ValidationMessageFor(m => m.StartDate)
            @Html.TextBoxFor(m=>m.EndDate)
            @Html.ValidationMessageFor(m => m.EndDate)
        </div>
    </div>
    <div>
        <button class="btn btn-primary">
            Save<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-down" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M3.5 10a.5.5 0 0 1-.5-.5v-8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 .5.5v8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 0 0 1h2A1.5 1.5 0 0 0 14 9.5v-8A1.5 1.5 0 0 0 12.5 0h-9A1.5 1.5 0 0 0 2 1.5v8A1.5 1.5 0 0 0 3.5 11h2a.5.5 0 0 0 0-1h-2z" />
                <path fill-rule="evenodd" d="M7.646 15.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 14.293V5.5a.5.5 0 0 0-1 0v8.793l-2.146-2.147a.5.5 0 0 0-.708.708l3 3z" />
            </svg>
        </button>
    </div>
}

