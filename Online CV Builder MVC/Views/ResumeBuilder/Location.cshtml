@model LocationViewModel
<h1>Where are you living?</h1>
@using (Html.BeginForm("Location", "ResumeBuilder"))
{
	<div class="progress">
		<div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="39" aria-valuemin="0" aria-valuemax="100" style="width: 39%;"></div>
	</div>
	<div style="width:55%; margin:10px">
		<div class="form-outline mb-3">
			<label class="form-label" style="width: 100%;margin-top: 30px;" for="fullName">City</label>
			<br>
			@Html.TextBoxFor(m=>m.City)
			@Html.ValidationMessageFor(m => m.City)
		</div>

		<div class="form-outline mb-3" style="width: 100%;margin-top: 30px;">
			<label class="form-label" for="phone">Country</label>
			<br>
			@Html.TextBoxFor(m=>m.Country)
			@Html.ValidationMessageFor(m => m.Country)
		</div>

		<div class="form-outline mb-3" style="width: 100%;margin-top: 30px;">
			<label for="exampleInputEmail1" class="form-label">State</label>
			<br>
			@Html.TextBoxFor(m=>m.State)
			@Html.ValidationMessageFor(m =>m.State)
		</div>
	</div>

	<button type="submit" class="btn btn-primary">
		Next step
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-circle-fill" viewBox="0 0 16 16">
			<path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z" />
		</svg>
	</button>

}
