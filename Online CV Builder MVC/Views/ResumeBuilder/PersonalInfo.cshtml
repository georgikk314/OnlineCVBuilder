@model PersonalInfoViewModel
@using (Html.BeginForm("PersonalInfo", "ResumeBuilder"))
{
	<div style="width:45%; margin:10px">
		<div class="input-group">
			<span class="input-group-text">Full name</span>
			@Html.TextBoxFor(m=>m.FullName)
			@Html.ValidationMessageFor(m => m.FullName)
		</div>

		<div class="form-outline mb-3" style="width: 100%;margin-top: 30px; max-width: 22rem">
			<label class="form-label" for="phone">Phone number with country code</label>
			@Html.TextBoxFor(m=>m.PhoneNumber)
			@Html.ValidationMessageFor(m => m.PhoneNumber)
		</div>

		<div class="mb-3">
			<label for="exampleInputEmail1" class="form-label">Email address</label>
			@Html.TextBoxFor(m=>m.Email)
			@Html.ValidationMessageFor(m => m.Email)
			<div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
		</div>
	</div>

	<button style="margin-top:150px;" type="submit" class="btn btn-primary">
		Next step
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-circle-fill" viewBox="0 0 16 16">
			<path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z" />
		</svg>
	</button>

}
