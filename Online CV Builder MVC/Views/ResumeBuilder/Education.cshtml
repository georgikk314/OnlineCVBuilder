@model IEnumerable<EducationViewModel>

<h1>Your education</h1>
<div class="progress">
	<div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100" style="width: 65%;"></div>
</div>
<br />
<div>
	<a asp-controller="ResumeBuilder" asp-action="CreateEducation" class="btn btn-primary">
		Add New Education
	</a>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Institute name</th>
			<th>Degree</th>
			<th>Field of study</th>
			<th>Start date</th>
			<th>End date</th>
		</tr>
	</thead>
	<tbody>
		@if (Model != null)
		{
			@foreach (var obj in Model)
			{
				<tr>
					<td>
						@obj.InstituteName
					</td>
					<td>
						@obj.Degree
					</td>
					<td>
						@obj.FieldOfStudy
					</td>
					<td>
						@obj.StartDate
					</td>
					<td>
						@obj.EndDate
					</td>
				</tr>
			}
		}

	</tbody>
</table>
<a asp-controller="ResumeBuilder" asp-action="Skills" class="btn btn-primary">
	Next step
	<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-circle-fill" viewBox="0 0 16 16">
		<path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z" />
	</svg>
</a>
