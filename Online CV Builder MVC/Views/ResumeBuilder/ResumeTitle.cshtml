		<h1 style="font-family:" Trebuchet MS", Helvetica, sans-serif">Give a name to your resume</h1>
		<br>
		@Html.TextBoxFor(m=>m.ResumeTitle)
		@Html.ValidationMessageFor(m => m.ResumeTitle)
