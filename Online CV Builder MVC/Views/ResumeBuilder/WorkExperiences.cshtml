@model IEnumerable<WorkExperienceViewModel>
@{
	ViewData["Title"] = "Build your resume";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>Your work experiences</h1>
<div class="progress">
	<div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="52" aria-valuemin="0" aria-valuemax="100" style="width: 52%;"></div>
</div>

<div>
	<a asp-controller="ResumeBuilder" asp-action="CreateWorkExperience" class="btn btn-primary">
		Add New Work Expirience
	</a>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Company name</th>
			<th>Position</th>
			<th>Start date</th>
			<th>End date</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
		@if(Model != null)
		{
			@foreach (var obj in Model)
			{
				<tr>
					<td>
						@obj.CompanyName
					</td>
					<td>
						@obj.Position
					</td>
					<td>
						@obj.StartDate
					</td>
					<td>
						@obj.EndDate
					</td>
					<td>
						@obj.Description
					</td>

				</tr>
			}
		}
		
	</tbody>
</table>
<a asp-controller="ResumeBuilder" asp-action="Education" class="btn btn-primary">
	Next step
	<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-circle-fill" viewBox="0 0 16 16">
		<path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z" />
	</svg>
</a>
