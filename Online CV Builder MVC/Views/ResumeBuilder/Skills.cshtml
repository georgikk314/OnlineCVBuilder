@model IEnumerable<SkillViewModel>
<h1>Your skills</h1>

<div>
	<a asp-controller="ResumeBuilder" asp-action="CreateSkill" class="btn btn-primary">
		Add New Skill
	</a>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>The description of the skill</th>
		</tr>
	</thead>
	<tbody>
		@if(Model != null)
		{
			@foreach (var obj in Model)
			{
				<tr>
					<td>
						@obj.SkillName
					</td>
				</tr>
			}
		}
		
	</tbody>
</table>
<a asp-controller="ResumeBuilder" asp-action="Certificate" class="btn btn-primary">
	Next step
	<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-circle-fill" viewBox="0 0 16 16">
