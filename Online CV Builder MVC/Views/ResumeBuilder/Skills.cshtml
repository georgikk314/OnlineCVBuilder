@model SkillViewModel
<h1>Your skills</h1>
@using (Html.BeginForm("Skills", "ResumeBuilder"))
{
    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: 70%;"></div>
    </div>
	<div id="skillCounter" style="width:55%; margin:10px">
        <div class="form-outline mb-3">
            <label class="form-label" style="width: 100%;margin-top: 30px;" for="text">Enter your skill</label>
            <br>
            @Html.TextBoxFor(m=>m.SkillName)
            @Html.ValidationMessageFor(m => m.SkillName)
        </div>
	</div>
    <button onclick="myFunction()">Add a new skill</button>

    <button  type="submit" class="btn btn-primary">
        Next step
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-circle-fill" viewBox="0 0 16 16">
            <path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z" />
        </svg>
    </button>

    <script>
        function myFunction() {
            const node = document.getElementById("skillCounter");
            const clone = node.cloneNode(true);
        }
    </script>
}
