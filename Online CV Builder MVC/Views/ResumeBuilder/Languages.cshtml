@model IEnumerable<LanguageViewModel>

<h1>Your languages</h1>
<div class="progress">
	<div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="99" aria-valuemin="0" aria-valuemax="100" style="width: 99%;"></div>
</div>
<br>

<div>
	<a asp-controller="ResumeBuilder" asp-action="CreateLanguage" class="btn btn-primary">
		Add New Language
	</a>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Name of the language</th>
			<th>Proficiency level</th>
		</tr>
	</thead>
	<tbody>
		@if (Model != null)
		{
			@foreach (var obj in Model)
			{
				<tr>
					<td>
						@obj.LanguageName
					</td>
					<td>
						@obj.ProficiencyLevel
					</td>
				</tr>
			}
		}

	</tbody>
</table>

<form method="post" asp-controller="ResumeBuilder" asp-action="ResumeSave">
	<button type="submit" class="btn btn-primary">Save Resume</button>
</form>